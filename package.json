{
    "name": "kreo-canvas",
    "version": "0.1.0",
    "private": true,
    "description": "Canvas layer for any webpage: freehand brush, shapes, quick annotations, export PNG/JSON. Chrome extension for fast visual feedback.",
    "type": "module",
    "license": "MIT",
    "author": "",
    "repository": {
        "type": "git",
        "url": "https://github.com/stevenleep/kreo.git"
    },
    "homepage": "https://github.com/stevenleep/kreo#readme",
    "bugs": {
        "url": "https://github.com/stevenleep/kreo/issues"
    },
    "keywords": [
        "chrome-extension",
        "manifest-v3",
        "drawing",
        "annotation",
        "fabricjs",
        "react",
        "vite",
        "canvas",
        "web-extension"
    ],
    "engines": {
        "node": ">=18.0.0",
        "npm": ">=8.0.0"
    },
    "scripts": {
        "dev": "vite",
        "build": "tsc && vite build",
        "build:extension": "tsc && vite build && npm run copy:manifest && npm run organize:files",
        "build:clean": "rm -rf dist && npm run build:extension",
        "copy:manifest": "cp public/manifest.json dist/",
        "organize:files": "rm -rf dist/src && cp -r public/icons dist/",
        "preview": "vite preview",
        "start": "vite",
        "prettier": "prettier --write .",
        "format:check": "prettier --check .",
        "lint": "eslint . --ext .ts,.tsx",
        "lint:fix": "eslint . --ext .ts,.tsx --fix",
        "type-check": "tsc --noEmit",
        "check": "npm run lint && npm run type-check && npm run format:check",
        "security:audit": "npm audit --audit-level=moderate",
        "security:fix": "npm audit fix",
        "clean": "rm -rf dist .chromium-profile-debug",
        "debug:ext": "npm run build:extension && node scripts/debug-extension.mjs",
        "debug:ext:fast": "node scripts/debug-extension.mjs --no-pin"
    },
    "devDependencies": {
        "@eslint/js": "9.31.0",
        "@types/chrome": "0.0.258",
        "@types/fabric": "5.3.0",
        "@types/react": "18.2.15",
        "@types/react-dom": "18.2.7",
        "eslint": "9.31.0",
        "eslint-config-prettier": "10.1.8",
        "eslint-plugin-prettier": "5.5.3",
        "eslint-plugin-svelte3": "4.0.0",
        "eslint-plugin-unused-imports": "4.1.4",
        "globals": "16.3.0",
        "puppeteer": "22.10.0",
        "svelte-eslint-parser": "1.3.0",
        "typescript": "5.8.3",
        "typescript-eslint": "8.37.0",
        "vite": "5.0.0",
        "vite-plugin-web-extension": "4.1.0"
    },
    "dependencies": {
        "@vitejs/plugin-react": "4.7.0",
        "fabric": "5.3.0",
        "less": "4.4.0",
        "less-loader": "12.3.0",
        "lucide-react": "^0.539.0",
        "react": "18.2.0",
        "react-dom": "18.2.0",
        "tslib": "^2.8.1"
    }
}
